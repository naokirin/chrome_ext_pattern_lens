{
  "name": "pattern-lens",
  "version": "1.0.0",
  "description": "Chrome extension for enhanced page search with regex and DOM element selector support",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "prepare": "wxt prepare",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "wxt": "^0.19.0",
    "typescript": "^5.3.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^23.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@biomejs/biome": "^1.9.4"
  }
}
