  },
  "devDependencies": {
    "wxt": "^0.20.13",
    "typescript": "^5.8.3",
    "@types/chrome": "^0.1.6",
    "@types/node": "^25.0.3",
    "vitest": "^4.0.6",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^27.3.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@biomejs/biome": "^2.3.10"
  }
